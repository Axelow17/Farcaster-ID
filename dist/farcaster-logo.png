    />
    <meta name="description" content="A decentralized social network" />
    <meta
      name="theme-color"
      content="#101010"
      media="(prefers-color-scheme: dark)"
    />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <link rel="apple-touch-icon" href="/og-logo-v3.png" />
    <link rel="manifest" href="/manifest.json" />
    <title>Farcaster</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <script>
      (function() {
        const STORAGE_KEY = 'user-saved-theme';
        const DEFAULT_THEME = 'system';
        
        try {
          const stored = localStorage.getItem(STORAGE_KEY);
          const userSavedTheme = stored || DEFAULT_THEME;
          
          let effective = userSavedTheme;
          if (userSavedTheme === 'system') {
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            effective = prefersDark ? 'dark' : 'light';
          }
          
          const root = document.documentElement;
          root.classList.toggle('dark', effective === 'dark');
          root.classList.toggle('light', effective === 'light');
          root.setAttribute('data-theme', userSavedTheme);
        } catch (e) {
          // Fallback if localStorage is unavailable
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const root = document.documentElement;
          root.classList.toggle('dark', prefersDark);
          root.classList.toggle('light', !prefersDark);
        }
      })();
    </script>
    <style>
      html.dark {
        background-color: #101010;
        color-scheme: dark;
      }
      html.light {
        background-color: #ffffff;
        color-scheme: light;
      }
      body {
        background-color: inherit;
      }
    </style>
